FROM node:slim
WORKDIR /app
COPY package*.json ./
RUN npm ci
ADD . .
EXPOSE 3001
ARG VITE_APP_BASE_URL='http://localhost:8081/api'
ENV VITE_APP_BASE_URL='http://localhost:8081/api'
ENTRYPOINT ["/bin/bash", "-c", "npm rebuild esbuild && npm start"]

